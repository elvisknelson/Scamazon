<div class="row mr-0 ml-0 justify-content-center">
  <div class="col-6">
    <h1 class="mb-5 row mr-0 ml-0 justify-content-center">Search Results</h1>

    <div class="card text-white bg-dark">
      <h3 class="card-header">Products</h3>
      <div class="card-body">
        <% @products.each do |product| %>
          <p class="card-text text-white"><%= link_to product.name, product_path(product) %></p>
        <% end %>
      </div>
    </div>

  </div>
</div>