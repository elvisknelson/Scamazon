<div class="row mr-0 ml-0 justify-content-center">
  <div class="col-6">
    <h1 class="mb-5 row mr-0 ml-0 justify-content-center">All Categories</h1>

    <div class="card text-white bg-dark">
      <div class="card-body">
        <% @categories.each do |category| %>
          <h3 class="card-text text-white"><%= link_to category.name, category_path(category) %></h3>
        <% end %>
      </div>
    </div>

  </div>
</div>