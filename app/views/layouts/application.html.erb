<!DOCTYPE html>
<html>
  <head>
    <title>Scamazon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">
        <img src=<%= image_url('Scamazon_Logo.png')%> height="40" class="d-inline-block align-top" alt=""></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item noline <%= 'active' if current_page?(admin_user_session_path) %>">
            <%= link_to 'Home', root_path, class: "nav-link" %>  <span class="sr-only">(current)</span>
          </li>
          <li class="nav-item noline <%= 'active' if current_page?(admin_user_session_path) %>">
            <%= link_to 'Categories', root_path, class: "nav-link" %>
          </li>
        </ul>
        <%= simple_form_for :search, url: search_index_path, class: "form-inline", method: "GET", html: { class: 'form-inline' } do |f| %>
          <%= f.input :name, input_html: {value: "", class: ""}, label: false %>
          <%= f.submit "", class: "" %>
          <i class="fas fa-search"></i>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
